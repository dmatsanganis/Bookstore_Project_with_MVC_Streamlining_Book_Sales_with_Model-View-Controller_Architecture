
@{
    ViewBag.Title = "TopBooks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="jumbotron">
    <h4 class="display-4" style="text-align: center">Reports</h4>
    <p class="lead" style="text-align: center">Fill in given fields in order to acquire a corresponding report.</p>
    <hr class="my-4">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("TopBooks", "Home", FormMethod.Post))
            {
                <form>
                    <fieldset>
                        <div class="form-group" align="center">
                            <h6 class="display-6" style="text-align: center">Track Top Books between dates</h6>
                            <div class="form-group">
                                <input type="text" class="form-control" name="BookAmount" id="Top" placeholder="# of Books" style="border: 1.5px solid white">
                            </div>
                            <div class="form-group">
                                <input type="date" class="form-control" name="DateFrom" id="DateFrom" style="border: 1.5px solid white">
                            </div>
                            <div class="form-group">
                                <input type="date" class="form-control" name="DateΤο" id="DateΤο" style="border: 1.5px solid white">
                            </div>
                            <div class="dropdown-divider"></div>
                            <button type="submit" class="btn btn-primary" value="TopBooks">Submit</button>
                        </div>
                    </fieldset>
                </form>     }
        </div>
        <div class="col-md-12">
            @using (Html.BeginForm("Order", "Home", FormMethod.Post))
            {
    <form>
        <fieldset>
            <div class="form-group" align="center">
                <h6 class="display-6" style="text-align: center">Track Order</h6>
                <div class="form-group">
                    <input type="text" class="form-control" name="StoreName" id="StoreName" placeholder="Store Name" style="border: 1.5px solid white">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="DateFrom" id="DateFrom" placeholder="From (e.x 1994-09-14 00:00:00.000)" style="border: 1.5px solid white">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="DateΤο" id="DateΤο" placeholder="To (e.x 1994-09-14 00:00:00.000)" style="border: 1.5px solid white">
                </div>
                <div class="dropdown-divider"></div>
                <button type="submit" class="btn btn-primary" value="" align="center" style="text-align: center">Submit</button>
            </div>
        </fieldset>
    </form>            }
        </div>

    </div>
</div>