@model IEnumerable<BookStore.Models.Order>
@{
    ViewBag.Title = "Παραγγελίες";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body style="background: #dfe0d9;">
    <header>


        <div class="container">
            <div class="card-deck text-center shadow-none justify-content-center" style="margin-top: 5%;margin-bottom: 0%;margin-right: 0px;margin-left: 0px;">
                <div class="card-deck shadow-none" style="margin-top: 2%;margin-bottom: 10%;margin-right: 0px;margin-left: 0px;">
                    <div class="row" style="text-align:center">
                        <div style="text-align:center" class="col">
                            <h2>Παραγγελίες</h2>
                        </div>
                    </div>
                    <table class="table table-striped" style="border-collapse: collapse;
  border-radius: 1em;
  overflow: hidden;">
                        <thead class="class=" text-center" style="background-color: #002b54;
        color: rgb(255,255,255);">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.OrderNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.StoreName)
                                </th>                                   
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StoreName)
                        </td>   
                    </tr>
                    }
                </table>
                </div>
            </div>
        </div>
    </header>
</body>