
@{
    ViewBag.Title = "Αναζήτηση Παραγγελίας";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron" style=" background: #dfe0d9;">
    <h4 class="display-4" style="text-align: center">Αναζήτηση Παραγγελίας</h4>
    <p class="lead" style="text-align: center">Συμπληρώστε τα παρακάτω πεδία για να αναζητήσετε την παραγγελία σας με βάση είτε το κάποιο κατάστημα είτε με βάση την χρονική περίοδο της παραγγελίας!</p>
    <hr class="my-4">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Order", "Home", FormMethod.Post))
            {
                <form>
                    <fieldset>
                        <div class="form-group" align="center">
                            <h6 class="display-6" style="text-align: center">Αναζητήστε τις παραγγελίες συμπηρώνοντας τα παρακάτω πεδία</h6>
                            <div class="form-group">
                                <label>Όνομα Καταστήματος:</label>
                                <input type="text" class="form-control" name="StoreName" id="StoreName" placeholder="Όνομα Καταστήματος" style="border: 1.5px solid white">
                            </div>
                            <div class="form-group">
                                <label>Από:</label>
                                <input type="date" class="form-control" name="DateFrom" id="DateFrom" placeholder="From (e.x 1994-09-14 00:00:00.000)" style="border: 1.5px solid white">
                            </div>
                            <label>Έως:</label>
                            <div class="form-group">
                                <input type="date" class="form-control" name="DateΤο" id="DateΤο" placeholder="To (e.x 1994-09-14 00:00:00.000)" style="border: 1.5px solid white">
                            </div>
                            <button type="submit" class="btn text-white" style="        background-color: goldenrod;text-align: center" align="center" >ΥΠΟΒΟΛΗ</button>
                        </div>
                    </fieldset>
                </form> }
        </div>
    </div>
</div>



