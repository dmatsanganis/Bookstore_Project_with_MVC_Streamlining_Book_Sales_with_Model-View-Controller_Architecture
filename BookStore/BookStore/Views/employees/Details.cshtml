@model BookStore.Models.employee

@{
    ViewBag.Title = "Λεπτομέρειες Εργαζόμενου";
}
        <div class="card-deck shadow-none ">
            <div class="container pt-5">
                <div class="row justify-content-center" style="position:sticky; top:auto">

                    <a style="padding-right:5px;" href="@Url.Action("/Index")" ; title="Επιστορφή"><img style=" width:24px;  height:24px;" src="/assets/img/return.svg" /></a>
                    <h3>Λεπτομέρειες</h3>





                </div>
                <div class="page-content page-container" id="page-content" style="margin-top: 2%;margin-bottom: 0%;margin-right: 0px;margin-left: 0px;">
                    <div class="padding">
                        <div class="row container d-flex justify-content-center">
                            <div class="col-xl-6 col-md-12">
                                <div class="card user-card-full">
                                    <div class="row m-l-0 m-r-0">
                                        <div class="col-sm-4 bg-c-lite-green user-profile" style="background-color: #002b54; border-radius: 1em;
">
                                            <div class="card-block text-center text-white">
                                                <div class="m-b-25"> <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius" alt="User-Profile-Image"> </div>
                                                <h6 class="f-w-600">@Html.DisplayFor(model => model.fname) @Html.DisplayFor(model => model.lname)</h6>
                                                <a href="@Url.Action("Edit", new { id = Model.emp_id })" title="Επεξεργασία">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                                    </svg>
                                                </a>
                                                <div>

                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-8">
                                            <div class="card-block">
                                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Λεπτομέρειες</h6>
                                                <div class="row">
                                                    <div class="col-sm-6">
                                                        <p class="m-b-10 f-w-600">@Html.DisplayNameFor(model => model.fname)</p>
                                                        <h6 class="text-muted f-w-400">@Html.DisplayFor(model => model.fname)</h6>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <p class="m-b-10 f-w-600"> @Html.DisplayNameFor(model => model.lname)</p>
                                                        <h6 class="text-muted f-w-400">@Html.DisplayFor(model => model.lname)</h6>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-6">
                                                        <p class="m-b-10 f-w-600">@Html.DisplayNameFor(model => model.hire_date)</p>
                                                        <h6 class="text-muted f-w-400">@Html.DisplayFor(model => model.hire_date)</h6>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <p class="m-b-10 f-w-600"> @Html.DisplayNameFor(model => model.job_lvl)</p>
                                                        @if (Model.job_lvl == null)
                                                        {
                                                            <h6 class="text-muted f-w-400">10</h6>
                                                        }
                                                        else
                                                        {

                                                            <h6 class="text-muted f-w-400">@Html.DisplayFor(model => model.job_lvl)</h6>
                                                        }
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-6">
                                                        <p class="m-b-10 f-w-600">@Html.DisplayNameFor(model => model.jobs.job_desc)</p>
                                                        <h6 class="text-muted f-w-400">@Html.DisplayFor(model => model.jobs.job_desc)</h6>
                                                    </div>
                                                    <div class="col-sm-6">
                                                        <p class="m-b-10 f-w-600"> @Html.DisplayNameFor(model => model.publishers.pub_name)</p>
                                                        <h6 class="text-muted f-w-400">@Html.DisplayFor(model => model.publishers.pub_name)</h6>
                                                    </div>
                                                </div>
                                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">@Html.DisplayNameFor(model => model.minit)</h6>
                                                <div class="row">
                                                    <div class="col-sm-12">
                                                        @if (Model.minit == " ")
                                                        {
                                                            <h6 class="text-muted f-w-600" >---</h6>
                                                        }
                                                        else
                                                        {
                                                        <h6 class="text-muted f-w-400">@Html.DisplayFor(model => model.minit)</h6>
                                                        }
                                                    </div>
                                                </div>
                                                <ul class="social-link list-unstyled m-t-40 m-b-10">
                                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="facebook" data-abc="true"><i class="mdi mdi-facebook feather icon-facebook facebook" aria-hidden="true"></i></a></li>
                                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="twitter" data-abc="true"><i class="mdi mdi-twitter feather icon-twitter twitter" aria-hidden="true"></i></a></li>
                                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="instagram" data-abc="true"><i class="mdi mdi-instagram feather icon-instagram instagram" aria-hidden="true"></i></a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>