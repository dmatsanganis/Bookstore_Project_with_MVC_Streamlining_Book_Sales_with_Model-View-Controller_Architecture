@model BookStore.Models.sales

@{
    ViewBag.Title = "Λεπτομέρειες Παραγγελίας";
}
<body style=" background: #dfe0d9;">
    <div class="container pt-5">
        <div class="row justify-content-center" style="position:sticky; top:auto">
            <a style="padding-right:6px;" href="@Url.Action("/Index")" ; title="Επιστορφή"><img style=" width:24px;  height:24px;" src="/assets/img/return.svg" /></a>
            <h3>Λεπτομέρειες</h3>
        </div>    
            <div class="row justify-content-center">
                <div class="card" style="background-color: #002b54; border-radius: 1em;">
                    <div class="card-block text-white p-lg-3">
                        <dl class="row">
                            <dt class="col-sm-12 p-3">
                                <a href="@Url.Action("Edit",new { Model.ord_num,Model.stor_id,Model.title_id})" title="Επεξεργασία">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                    </svg>
                                </a>
                            </dt>
                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ord_date)</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.ord_date)</dd>
                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.qty)</dt>
                            <dd class="col-sm-9">
                                <p>@Html.DisplayFor(model => model.qty)</p>
                            </dd>

                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.payterms)</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.payterms)</dd>
                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.stores.stor_name)</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.stores.stor_name)</dd>
                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.titles.title)</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.titles.title)</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

</body>
